<div class='modal fade' id='createRecordModal' tabindex='-1' aria-labelledby='createRecordModal' ariahidden='true'>
  <div class='modal-dialog'>
    <div class='user-edit modal-content'>
      <form action='/record/{{ accountId }}' method='POST'>
        <div class='d-flex justify-content-between m-2'>
          <div class='edit-page-title d-flex align-items-center'>
            <button type='button' class='border border-0 bg-white' data-bs-dismiss='modal' aria-label='Close'>X</button>
            <span class='ms-4'>新增支出</span>
          </div>
          <button type='submit' class='btn btn-primary m-1'>新增</button>
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <label for="name" class="mb-2 mt-2">品項</label>
          <input type="text" id="name" name="name" class="form-control w-75 ms-2" maxlength="10" required />
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <label for="amount" class="mb-2 mt-2">金額</label>
          <input type="number" id="amount" name="amount" class="form-control w-75 ms-2" required />
        </div>
        <div class="mb-3 d-flex justify-content-center">
          <label for="date" class="mb-2 mt-2">日期</label>
          <input type="date" id="date" name="date" class="form-control w-75 ms-2" required />
        </div>
        <div class="mb-3 ms-4">
          <label for="category" class="mb-2 ms-3">類別</label>
          <select id="category" name="category" class="ms-2" required>
            <option value="">請選擇類別</option>
            {{#each categories}}
              <option value="{{ this.id }}">{{ this.name }}</option>
            {{/each}}
          </select>
        </div>
      </form>
    </div>
  </div>
</div>
</div>