<div class="mb-4 text-center">
  <h1 class="h3 font-weight-normal mb-3">登入您的帳本</h1>
</div>
{{> message}}
<div class="d-flex justify-content-center">
  <form class="form-signin w-25" action="/signin" method="POST">
      <div class="form-row mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" id="email" type="text" name="email" class="form-control" placeholder="Email" required
          autofocus>
      </div>
      <div class="form-row mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" id="password" type="password" name="password" class="form-control"
          placeholder="Password" required>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-primary btn-block w-100" type="submit">Login</button>
      </div>
  </form>
</div>
<div class="mt-2 mb-4 d-flex justify-content-center">
  <p class="w-25 text-end"><a href="/signup">Sign Up</a></p>
</div>